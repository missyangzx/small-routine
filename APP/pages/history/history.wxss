/* pages/history/history.wxss */

.wrap{
  width: 750rpx;
  height: 1334rpx;
  box-sizing: border-box;
  padding: 20rpx;
}
.top{
  height: 100rpx;
  text-align: right;
  color: #818181;
  font-size: 30rpx;
  line-height: 100rpx;
  border-bottom: 1px solid #efefef;
}
.list{
  margin: 20rpx 0;
  height: 200rpx;
  display: flex;
  justify-content: space-between;
  align-items: center; 
}
.list image{
  width: 200rpx;
  height: 200rpx;
  display: block;
  margin-right: 20rpx;
}
.news{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.news .name{
  color: #181818;
  font-size: 30rpx;
  margin-bottom: 20rpx;
}
.news .count{
  color: #a6a6a6;
  font-size: 24rpx;
}
.news .price{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.news .price text{
  color: #cf2c31;
  font-size: 20rpx;
}
.news .price .prices{
  font-size: 30rpx;
}