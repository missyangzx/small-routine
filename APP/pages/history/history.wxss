/* pages/history/history.wxss */
.wrap{
  width: 750rpx;
  height: 1334rpx;
  box-sizing: border-box;
  padding: 20rpx 0;
  background: #f2f2f2;
}
.list{
  margin: 20rpx 0;
  height: 200rpx;
  display: flex;
  justify-content: space-between;
  align-items: center; 
  background: #fff;
}
.list image{
  width: 200rpx;
  height: 200rpx;
  display: block;
  margin-right: 20rpx;
}
.news{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.news .name{
  color: #181818;
  font-size: 30rpx;
  margin-bottom: 20rpx;
}
.news .count{
  color: #a6a6a6;
  font-size: 24rpx;
}
.news .price{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.news .price text{
  color: #cf2c31;
  font-size: 20rpx;
}
.news .price .prices{
  font-size: 30rpx;
}
.footer{
  display: flex;
  height: 50rpx;
  margin: 100rpx 200rpx;
}
.footer text{
  width: 250rpx;
  color: #bacdc3;
  font-size: 30rpx;
  line-height: 130rpx;
}
.footer image{
  width: 216rpx;
  height: 100rpx;
  opacity: 0.3;
  background-color: #397755;
}