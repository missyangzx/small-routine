/* pages/recommend/recommend.wxss */
.wrap{
  width: 750rpx;
  height: 1334rpx;
  background: #efefef;
}
.wrap image{
  width: 100%;
  height: 350rpx;
  background: orange;
}
.list{
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
}
.lis{
  width:48%;
  margin-bottom:25rpx;
  background:#fff;
  border-radius: 20rpx;
  overflow: hidden;
  position: relative;
}
.lis image{
  width:100%;
  height:287rpx;
  margin-bottom: 32rpx;
  margin-top: 20rpx;
  overflow: hidden;
}
.lis view{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.new_text1{
  font-size:28rpx;
  box-sizing: border-box;
  padding: 0 89rpx 15rpx 10rpx;
}
.new_text_2{
  color:#ccc;
  font-size: 24rpx;
  padding-left: 10rpx;
  padding-bottom: 31rpx;
  box-sizing: border-box;
}
.new_text_3{
  color:red;
  font-size: 20rpx;
  padding-left: 15rpx;
  padding-bottom: 33rpx;
  box-sizing: border-box;
}
.lis .icon{
  position: absolute;
  right: 20rpx;
  top: 20rpx;
}