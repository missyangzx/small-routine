/* pages/coupon/coupon.wxss */
.wrap{
  box-sizing: border-box;
  padding: 20rpx 30rpx;
  overflow: hidden;
  width: 750rpx;
  height: 1334rpx;
  background: #eee;
}
.coupon-center{
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  padding: 0 30rpx;
  height: 100rpx;
  background: #fff;
  border-radius: 10rpx;
}
.coupon-center view{
  height: 120rpx;
  line-height: 120rpx;
  font-size: 30rpx;
  color: #747474;
}
.coupon-center view icon{
  margin-right: 20rpx;
}
.icon-youhuiquan{
  color: #ec3127;
}
.coupon{
  margin: 20rpx 0;
}
.coupon-list{
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  padding: 0 30rpx;
  height: 200rpx;
  background: #fff;
  border-radius: 10rpx;
}
.coupon-list view{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
}
.price{
  width: 150rpx;
  color: orange;
  font-size: 30rpx;
}
.text{
  font-size: 50rpx;
  font-weight: bold;
}
.news{
  margin-left: 30rpx;
  width: 320rpx;
}
.name{
  color: #000;
  font-size: 30rpx;
}
.time{
  color: #999;
  font-size: 28rpx;
  margin-top: 10rpx;
}
.btn{
  width: 150rpx;
  height: 60rpx;
  background: orange;
  line-height: 60rpx;
  color: #fff;
  font-size: 28rpx;
  border-radius: 10rpx;
  box-sizing: border-box;
  padding: 0 20rpx;
  margin-left: 20rpx;
}
.shopNews{
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  padding: 0 20rpx;
  height: 60rpx;
  background: #ccc;
}
.shopNews image{
  width: 40rpx;
  height: 50rpx;
}
.shopNews text{
  font-size: 24rpx;
  color: #eee;
}