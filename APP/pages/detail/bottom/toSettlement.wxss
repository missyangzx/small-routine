.toSettementBox{
  display: flex;
  z-index: 3;
  width: 100%;
  height: 106rpx;
  justify-content: space-between;
  background: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
}
.settementIcon{
  display: flex;
  flex: 1;
  justify-content: space-around;
  padding-top: 26rpx;
  font-size: 16rpx;
  color:#7f7f7f;
  text-align: center;
}
.settementIcon .settement .iconfont{
  font-size: 40rpx;
}
.settementButton {
  display: flex;
}
.settementButton view{
  border-radius: 0;
  padding: 0;
  line-height: 106rpx;
  text-align: center;
}
.settementButton .Collage{
  width: 247rpx;
  height: 100%;
  background:#ffcec9;
  color: #fff;
}
.settementButton .Alone{
  width: 239rpx;
  height: 100%;
  background:#fb3609;
  color: #fff;
}