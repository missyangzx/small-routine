              <view class='goodsTitle'>商品</view>
              <view class='goodsShop'><text class='goodsIcon'>图标</text><text class='goodsPrice'>￥<text class='num'>228     </text>.00</text><button>立即购买<text class='shopIcon'></text></button></view> 
            </view>
          </view>
        </view>
      </view>
      <!-- 商品详情结束 -->
      <!-- 详情底部开始 -->
      <view>
        <van-goods-action>
          <van-goods-action-icon
            icon="wap-home"
            text="首页"
            bind:click="onClickIcon"
          />
          <van-goods-action-icon
            icon="star-o"
            text="收藏"
            bind:click="onClickIcon"
          />
          <van-goods-action-icon
            icon="service-o"
            text="客服"
            bind:click="onClickIcon"
          />
          <van-goods-action-button
            text="发起拼单"
            type="warning"
            bind:click="onClickButton"
            data-index="0"
          />
          <van-goods-action-button
            text="单独购买"
            bind:click="onClickButton"
            data-index="1"
          />
        </van-goods-action>
      </view>
      <van-popup
      show="{{ show }}"
      position="bottom"
      overlay="{{ true }}"
      custom-style='overflow:none'
      class='add'
    >
        <view class='addgoods'>
          <view class='addgoodsBox'>
            <view class='marque'>
              <view class='addgoodsMsg'>
                <image src="{{data.goods_thumb}}" class='addGoodsImg'></image>
                <view class='addGoodsPrice'>
                  <view class='Price'>￥<text>{{data.shop_price}}</text></view>
                  <view class='num'>库存2343件</view>
                  <view class='checksize'>请选择 尺码</view>
                </view>
              </view>
              <van-icon name="close"  class='close' bindtap='onClose'/>
            </view>
            <view class='size'>
              <view class='title'>尺码</view>
              <view><text class='{{curSize===index?"active":""}}' wx:for="{{size}}" data-size="{{index}}">{{item}}</text></view>
            </view>
            <view class='moreMarque'>
              <view class='title'>颜色</view>
              <view><text class='{{curColor===index?"active":""}}' wx:for="{{color}}" data-color="{{index}}">{{item}}</text></view>
            </view>
            <view class='moreCount'>
              <text class='count'>数量</text>
              <view class='number'>
                <view class='add' bindtap="add" data-index="{{index}}">+</view>
                  <input  bindinput="bindKeyInput" placeholder="{{num}}" disabled="true"/>
                  <view class='remove' bindtap="even" data-index="{{index}}">-</view>
                </view>
            </view>
            <button bindtap='goPay' data-dataList="{{data}}" data-id="{{data.goods_id}}" data-price="{{totalPrice}}">确定</button>
          </view>
        </view>
      </van-popup>
      <!-- 详情底部结束 -->
    </view>

  </scroll-view>
