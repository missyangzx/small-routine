<view>
  <view class='sliderImg'>
   <swiper autoplay='true' circular='true' class='slider'>
    <swiper-item wx:for='{{sliderImg}}' wx:key='{{index}}'>
      <image src='{{item}}' class='{{change?"":"wiper-slide-active"}}'></image>
    </swiper-item>
   </swiper>
  </view>
