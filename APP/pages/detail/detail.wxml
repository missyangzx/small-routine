          </swiper>
        </view>
      </view>
      <!-- 拼团部分结束 -->
      <view class='empty'></view>
      <!-- 评论部分开始 -->
      <view class='appraise'>
        <view class='appraiseTitle'>
          <text>商品评价（8823）</text>
          <text class='more'>查看更多<view class='arrow'> > </view></text>
        </view>
