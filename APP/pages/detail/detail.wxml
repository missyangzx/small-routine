<!--pages/detail/detail.wxml-->
<view class="container">
  <view class="custom flex_center" style="padding-top:{{28}}px;background-color:{{setNav}}">
    <view class='arrow' bindtap='goBack'>
      <icon class='iconfont icon-youjiantou'></icon>
    </view>
    <view class='cart'>
      <icon class='iconfont icon-icon' style='color:#fff;'></icon>
    </view>
    <view class='top-more'>
      <icon class='iconfont icon-ic_more_normal'></icon>
    </view>
    <view class='top-share'>
      <icon class='iconfont icon-fenxiang'></icon>
    </view>
  </view>
  <scroll-view style="height: {{setHeight}}px" scroll-y="true" bindscroll="scroll">
    <view class='wrap'>
      <view class='top'>
        <image src="{{data.goods_thumb}}"></image>
      </view>
      <view class='news'>
        <view class='news-top'>
          <text>{{data.goods_name}}</text>
          <view class='share'>
            <icon class='iconfont icon-fenxiang'></icon>
            <text>分享</text>
          </view>
        </view>
        <view class='news-center'>
          ￥<text>{{data.shop_price}}</text>
        </view>
        <view class='news-bottom'>
          <text>快递：免运费</text>
          <text class='saleNum'>已拼3.8万件</text>
        </view>
      </view>
      <view class='coupon'>
        <view class='couponBox'> 
          <view>
            <icon class='iconfont icon-youhuiquan'></icon>
            <text>10元店铺优惠券</text>
          </view>
          <view>
            <icon class='iconfont icon-youhuiquan'></icon>
            <text>20元店铺优惠券</text>
          </view>
        </view>
        <icon class='iconfont icon-youjiantou'></icon>
      </view>
      <view class='serviceBox'>
        <text class='service'>极速退款</text>
        ·
        <text class='service'>全场包邮</text>
        ·
        <text class='service'>7天退换</text>
        ·
        <text class='service'>48小时发货</text>
        <icon class='iconfont icon-youjiantou jaintou'></icon>
      </view>
