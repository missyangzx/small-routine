        <view><text class='iconfont icon-fenxiang'></text></view>
        <view><text>分享</text></view>
      </view>
    </view>
    <view class='price'>
      <view class='priceBox'>
        <text class='newPric'>￥<text class='newPric num'>{{goods.shop_price}}-{{goods.market_price}}</text></text>
      </view>
    </view>
    <view class='seller'>
      <text>快递：免运费</text>
      <text class='sellerNum'>已拼3.8万件</text>
    </view>
  </view>
