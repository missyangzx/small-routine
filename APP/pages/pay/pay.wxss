/* pages/pay/pay.wxss */
.pay{
  width: 100vw;
  height: 100vh;
  overflow: auto;
  background: #999999;
}
.box{
  width: 100vw;
  height: 17vw;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0 5vw;
  line-height: 17vw;
  background: #fff;
}
.colorBar{
  width: 100vw;
  height: 1vw;
  background: red;
}
.shopping{
  width: 100vw;
  display: block;
  box-sizing: border-box;
  padding: 7vw 3vw 0 3vw;
  background: #fff;
}
.shopList{
  padding-bottom: 6vw;
  height: 27vw;
  display: flex;
  position: relative;
}
.shopList image{
  width: 24vw;
  height: 24vw;
}
.shopList>view:nth-of-type(1){
  flex: 1;
  box-sizing: border-box;
  padding: 0 2vw;
}
.shopList>view:nth-of-type(1)>text{
  display: block;
}
.shopList>view:nth-of-type(1)>text:nth-of-type(1){
  font-size: 5vw;
  color: #333333;
}
.shopList>view:nth-of-type(1)>text:nth-of-type(2){
  font-size: 4vw;
  color: #afafaf;
}
.shopList>view:nth-of-type(2){
  position: absolute;
  bottom: 6vw;
  right: 0;
  width: 34vw;
  height: 3vw;
  font-size: 4vw;
  line-height: 4vw;
}
.shopList>view:nth-of-type(2)>text:nth-of-type(1){
  margin-right: 5vw;
}
.discount{
  margin-top: 1vw;
  width: 100%;
  height: 10vw;
  background: #fff;
  line-height: 10vw;
  font-size: 5vw;
  box-sizing: border-box;
  padding: 0 3vw;
  display: flex;
  justify-content: space-between;
}
.prices{
  margin-top: 1vw;
  width: 100vw;
  background: #fff;
}
.prices>view{
  display: flex;
  justify-content: space-between;
  padding: 3vw;
  line-height: 4vw;
  font-size: 4vw;
}
.note{
  margin-top: 1vw;
  width: 100vw;
  background: #fff;
  box-sizing: border-box;
  display: flex;
  padding: 3vw;
  line-height: 4vw;
  font-size: 4vw;
}
.note>text:nth-of-type(2){
  margin-left: 8vw;
  color: #999999;
}
.van-submit-bar__bar{
  box-sizing: border-box;
  padding: 0 0 0 5vw;
}
.van-submit-bar__bar .van-submit-bar__text{
  text-align: left;
}
.radioBtn{
  margin-top: 1vw;
}
.value-class {
  flex: none !important;
}