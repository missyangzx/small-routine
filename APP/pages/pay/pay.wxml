<!--pages/pay/pay.wxml-->
<view class='pay'>
  <view class='box'>
    <text>请确认收货地址</text>
    <icon class="iconfont icon-youjiantou"></icon>
  </view>
  <!-- 彩条 -->
  <view class='Colorbar'>
    <image src='../image/Colorbar.png' style="width: 100%; height: 4rpx;"></image>
  </view>
  <!-- 商品详情 -->
  <view  wx:for="{{data}}" wx:key="{{index}}" data-index="{{index}}">
    <view class='shopping'>
      <view class='title'>
        <icon class='iconfont icon-yemian'></icon>
        <text>neodpillo海外旗舰店</text>
        <icon class='iconfont icon-youjiantou'></icon>
      </view>
      <view class='shopList'>
        <image src='{{item.goods_thumb}}'></image>
        <view>
          <text>{{item.goods_name}}</text>
          <text>{{item.goods_name}}</text>
        </view>
        <view>
          <text style="margin-right: 30rpx;">共1件</text>
          <text>￥{{item.shop_price}}</text>
        </view>
      </view>
    </view>
    <view class='discount' bindtap='myCoupon'>
      <text>优惠</text>
      <text>0张可用 ></text>
    </view>
    <view class='prices'>
      <view>
        <text>商品总额</text>
        <text>￥{{item.shop_price}}</text>
      </view>
      <view>
        <text>运费</text>
        <text>￥00.00</text>
      </view>
    </view>
    <view class='note'>
      <text>留言</text>
      <text>给买家留言</text>
    </view>
  </view>
  <view class='radioBtn'>
    <van-radio-group value="{{ radio }}" bind:change="onChange">
      <van-cell-group>
        <van-cell
          title="微信支付"
          value-class="value-class"
          clickable
          data-name="1"
          bind:click="onClick"
        >
          <van-radio name="1" />
        </van-cell>
        <van-cell
          title="微信好友代付"
          value-class="value-class"
          clickable
          data-name="2"
          bind:click="onClick"
        >
          <van-radio name="2" />
        </van-cell>
      </van-cell-group>
    </van-radio-group>
  </view>
  <van-submit-bar
    price="{{ 2298 }}"
    button-text="提交订单"
    bind:submit="onSubmit"
  />
  <van-popup show="{{ show }}" >
    <view class='popupTop'>
      <van-icon name="cross" bindtap="onClose" />
      <image src='../image/aa1.jpg'></image>
      <text>确认支付密码</text>
    </view>
    <view class='allPrice'>
      <view>煊赫</view>
      <view><text>￥</text><text>{{price}}.00</text></view>
    </view>
    <view class='bankCard'>
      <image src='../image/aa2.jpg'></image>
      <text>工商银行存蓄卡(****)</text>
      <van-icon name="arrow" />
    </view>
    <van-button type="danger">确认支付</van-button>
  </van-popup>
</view>