<!--pages/pay/pay.wxml-->
<view class='pay'>
  <view class='box'>
    <text>请确认收货地址</text>
    <text>></text>
  </view>
  <view class='colorBar'></view>
  <view class='shopping'>
    <view class='shopList'>
      <image src='../image/aa1.jpg'></image>
      <view>
        <text>狼牙枕</text>
        <text>米色</text>
      </view>
      <view>
        <text>共一件</text>
        <text>￥238.00</text>
      </view>
    </view>
  </view>
  <view class='discount' bindtap='myCoupon'>
    <text>优惠</text>
    <text>0张可用 ></text>
  </view>
  <view class='prices'>
    <view>
      <text>商品总额</text>
      <text>￥238.00</text>
    </view>
    <view>
      <text>运费</text>
      <text>￥00.00</text>
    </view>
  </view>
  <view class='note'>
    <text>留言</text>
    <text>给买家留言</text>
  </view>
  <view class='radioBtn'>
    <van-radio-group value="{{ radio }}" bind:change="onChange">
      <van-cell-group>
        <van-cell
          title="微信支付"
          value-class="value-class"
          clickable
          data-name="1"
          bind:click="onClick"
        >
          <van-radio name="1" />
        </van-cell>
        <van-cell
          title="微信好友代付"
          value-class="value-class"
          clickable
          data-name="2"
          bind:click="onClick"
        >
          <van-radio name="2" />
        </van-cell>
      </van-cell-group>
    </van-radio-group>
  </view>
  <van-submit-bar
    price="{{ 3050 }}"
    button-text="提交订单"
    bind:submit="onSubmit"
  />
  <van-popup show="{{ show }}" >
    <view class='popupTop'>
      <van-icon name="cross" bindtap="onClose" />
      <image src='../image/aa1.jpg'></image>
      <text>确认支付密码</text>
    </view>
    <view class='allPrice'>
      <view>煊赫</view>
      <view><text>￥</text><text>238.00</text></view>
    </view>
    <view class='bankCard'>
      <image src='../image/aa2.jpg'></image>
      <text>工商银行存蓄卡(****)</text>
      <van-icon name="arrow" />
    </view>
    <van-button type="danger">确认支付</van-button>
  </van-popup>
</view>