.nav{
  overflow: hidden;
  background: #fff;
}
.nav .navList{
  width: 200%;
}
.nav .nav-title{
  float:left;
  width: 100rpx;
  text-align: center;
}
.active-sort-item{
  color: #e02e24;
  border-bottom: 6rpx solid #e02e24;
}
.swipes{
  width: 100%;
  margin-top: 20rpx;
}
.swiperItem image{
  width: 100%;
  height:100%;
}
.Assemble{
  width: 100%;
  margin-top: 20rpx;
  border: 2rpx solid #ccc;
  background: #fff;
}
.goodList{
  display: flex;
  width: 100%;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-top: 20rpx;
}
.goodList .item{
  box-sizing: border-box;
  width: 49.2%;
  margin-bottom: 10rpx; 
  border: 1px solid #ccc;
  background: #fff;
}
.goodList .item:nth-child(odd){
  margin-right: 5rpx;
}
.goodList .item:nth-child(even){
  margin-left: 5rpx;
}
.item .item-image{
  width: 100%;
  height: 80%;
  border-bottom: 1px solid #ccc;
}
.item .item-image .image{
  width: 100%;
  height: 100%;
}
.item .item-news{
  box-sizing: border-box;
  padding: 10rpx;
}
.item .item-Text{
  width: 100%;
  overflow:hidden; 
  white-space: nowrap;
  text-overflow: ellipsis;
}
.item .item-news .item-footer{
  display: flex;
  align-items: center;
}
.item .item-news .item-footer .price{
  color: red;
  font-size: 14px;
  font-weight: 700;
}
.item .item-news .item-footer .price .price-Icon{
  font-size: 10px;
}
.item .item-news .item-footer .item-sell{
  margin-left: 10rpx; 
  font-size: 10px;
}
.item .item-news .item-footer .item-headPortrait{
  flex: 1;
  position: relative;
}
.item-headPortrait .p{
  position: absolute;
  top: -10px;
  width: 20px;
  height: 20px;
  border-radius: 50%;
}
.item-headPortrait .p1{
  right: 0;
  z-index: 4;
  background: #f0f;
}
.item-headPortrait .p2{
  right: 15px;
  z-index: 5;
  background: #0ff;
}