<import src="/templates/products.wxml" />
<import src="/templates/purchases.wxml" />
<!--pages/index/home/home.wxml-->
<view class="home">
  <view class='swiper_view_list'>
    <swiper
      indicator-dots="{{true}}"
      indicator-color="{{swiperColor}}"
      indicator-active-color="{{swiperActiveIndex}}"
      autoplay="{{autoplay}}"
      circular="true"
      previous-margin="24px"
      next-margin="24px"
      bindchange="onChange"
      style="background-image : url({{bgImage.swiper}})"
    >
      <swiper-item
        class="{{index==current ? 'swiper-active' : ''}}"
        wx:for="{{banners}}"
        wx:key
      >
        <navigator>
          <image mode="widthFix" src="{{item.src}}" class="slide-image"/>
        </navigator>
      </swiper-item>
    </swiper>
    <!-- <van-icon class='swiper-icon next' name="arrow" size="2em" color='#fff' />
    <van-icon class='swiper-icon prev' name="arrow-left" size="2em" color='#fff' /> -->
  </view>
  
  <view class='activities'>
    <view class='activities-bg' style="background-image: url({{bgImage.title}})"></view>
    <view class='activities-content'>
      <view class='activities-title'>
          快来和我拼团吧！
        <text>!</text>
      </view>
      <view class='activitites-goods'>
        <view class="activtites-goods-image">
          <image class="image" src="{{recommend[0].shop_logo1}}"></image>
        </view>
        <view class='activtites-item'>
          <view>{{recommend[0].shop_name}}</view>
          <view class='price'>
            <text class='newPrice'>￥{{recommend[0].shop_price}}</text>
            <text>￥150</text>
          </view>
          <view class='timer-activitites'>限时抢购</view>
        </view>
      </view>
      <view class='activitites-Head-portrait'>
        <view class="portrait {{item.portrait==true ? 'portrait-active' : ''}}" wx:for="{{portrait}}" wx:key>
          <image></image>
        </view>
      </view>
      <view class='activitites-ren'>仅剩<text class='num'>3</text>人，快来呼唤小伙伴来参加吧！</view>
      <view class="timeOut">
        <text class='timeline'></text>
        <view class='timer-view'>
          剩余
          <text class="times">23</text>:<text class="times">00</text>:<text class="times">23</text>结束
        </view>
        <text class='timeline'></text>
      </view>
    </view>
    <view class='coupon'>
      <view class='coupon-content'>
        <view class='dity-name'>
          <view class='ditys'>12546</view>
          <view class='icon'></view>
        </view>
        <view class='coupon-title1'>
          <text>玩趣加购</text>
          <text>分享有礼</text>
        </view>
        <view class='coupon-title2'>
          <text>先领券</text>
          <text>在购物</text>
        </view>
        <view class='couponList'>
          <view class='coupon-item' wx:for="{{portraits}}" wx:key>
            <image class="image" src="{{item.imgUrl}}"></image>
          </view>
        </view>
      </view>
    </view>
  </view>
  <view class='hot-goods'>
    <view class='hot-content' style="background-image: url({{bgImage.title}})">
      <view class='hot-title'>
        1235
      </view>
      <view class='hot-title1'>
        <view class='ditys'>12546</view>
        <view class='icon'></view>
      </view>
      <view class='hot-title2'>
        泰国平面波浪枕
      </view>
      <view class='hot-image'>
        <image class="image" src="{{recommend[0].shop_logo1}}"></image>
        <view class='purchase'>
          <view class='purchase-price'>
            <text></text>
            <text>￥</text>
            <text class='price'>{{recommend[0].shop_price}}</text>
            <text>.00</text>
          </view>
          <view class='purchase-btn'>
            <text>立即购买</text>
            <text></text>
          </view>
        </view>
      </view>
      <view class='hot-image1'>
        <view class='hot-image1s'>
          <view class='max-image'>
            <image class='image' src='https://img.alicdn.com/imgextra/i3/2201306665630/O1CN01nNOEky1rSaO7paJ3d_!!2201306665630.gif'></image>
          </view>
          <view class="min-image">
            <view class='title1'>11124849656</view>
            <view class="title2">泰国平面乳胶枕</view>
            <image class='image'></image>
            <view class='purchases'>
              <view class='purchase-price'>
                <text></text>
                <text>￥</text>
                <text class='price'>288</text>
                <text>.00</text>
              </view>
              <view class='purchase-btn'>
                <text>立即购买</text>
                <text></text>
              </view>
            </view>
          </view>
        </view>
      </view>
      <view class='hot-image2'>
        <view class='hot-image2-top'>
          <view class='hot-title1'>
            <view class='ditys'>12546</view>
            <view class='icon'></view>
          </view>
          <view class='hot-title2'>
            泰国波浪按摩枕
          </view>
          <view class='hot-image'>
            <image></image>
          </view>
        </view>
        <view class='hot-item'>
          <view class='item'>
            <view class="item-title">1264898489</view>
            <view class='item-image'>
              <image></image>
            </view>
            <view class='purchases'>
              <template is="purchase" />
            </view>
          </view>
          <view class='item'>
            <view class="item-title">1264898489</view>
            <view class='item-image'>
              <image></image>
            </view>
            <view class='purchases'>
              <template is="purchase" />
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>
  <view class="hot-goods1">
    <view class='hot-goods1-content'>
      <view class='hot2-bg' style="background-image: url({{bgImage.title}})"></view>
      <view class='hot2-title'>
        <text>45489498</text>
        <text>16549499</text>
      </view>
      <view class='hot2-title2'>
        <view class='title1'>12548</view>
        <view class='title2'>1568498</view>
      </view>
      <view class='hot2-item'>
        <view class='item'>
          <view class="item-title">1264898489</view>
          <view class='item-image'>
            <image></image>
          </view>
          <view class='purchases'>
            <template is="purchase" />
          </view>
        </view>
        <view class='item'>
          <view class="item-title">1264898489</view>
          <view class='item-image'>
            <image></image>
          </view>
          <view class='purchases'>
            <template is="purchase" />
          </view>
        </view>
      </view>
      <view class='max-image'>
        <image></image>
      </view>
    </view>
  </view>
  <view class="row">
    <view class='header'>
      <text class='ranking'>排行榜</text>
      <view class='volume'>
        <text class='active'>销量排行</text>
      </view>
    </view>
      <view class='bodys'>
        <view class='center' wx:for="{{ranking}}" wx:key>
          <image src='{{item.goods_thumb}}'/>
          <view class='circle'>
            <text>{{index+1}}</text>
          </view>
          <view class='text'>
            <text>{{item.goods_name}}</text>
            <text class='person'>{{virtual_sales}}人付款</text>
          </view>
        </view>
      </view>
  </view>
  <view class='goodList'>
    <view class="like_title">猜你喜欢</view>
    <template
    is="homeprod"
    wx:key
    wx:for="{{guessgoods}}"
    data="{{item}}" />
    <view class="AllGoods">查看全部宝贝</view>
  </view>
</view>
